<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apriluziknaver.numbaseball.GameActivity">

    <RelativeLayout
        android:id="@+id/layout_playview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <!--사용자-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/my_name"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="NICKNAME" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:scrollbars="vertical"
                app:reverseLayout="true"
                android:layout_margin="2dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <!--상대방-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/someone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/someone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="NICKNAME" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/someone_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="180dp"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/roundBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--라운드카운트-->
            <!--이미지뷰: 고정 텍스트(이미지)-->
            <!--텍스트부: 라운드카운트 텍스트-->
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/count"
                    android:text="0"
                    android:textSize="32sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/round"
                    android:src="@android:drawable/edit_text"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <!---->
    <LinearLayout
